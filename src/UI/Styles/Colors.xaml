<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================ -->
    <!-- Sprint 1.3: Color & Brush definitions                            -->
    <!-- Source: NEO_UI_Development_Plan_WPF.md §3 (frozen)               -->
    <!-- Source: UI_SPEC.md §7 (quality indication)                       -->
    <!-- ================================================================ -->

    <!-- ── 1. Raw Color values ── -->

    <!-- 1.1 Theme - Apple System Blue -->
    <Color x:Key="Color.Primary">#007AFF</Color>
    <Color x:Key="Color.PrimaryLight">#5AC8FA</Color>
    <Color x:Key="Color.PrimaryDark">#0051D5</Color>

    <!-- 1.2 Backgrounds - Apple style light/dark -->
    <Color x:Key="Color.BackgroundDark">#1C1C1E</Color>
    <Color x:Key="Color.Background">#2C2C2E</Color>
    <Color x:Key="Color.Panel">#242426</Color>
    <Color x:Key="Color.Surface">#F5F5F7</Color>
    <Color x:Key="Color.SurfaceDark">#E5E5EA</Color>
    <Color x:Key="Color.Border">#38383A</Color>

    <!-- 1.3 Functional -->
    <Color x:Key="Color.Success">#4CAF50</Color>
    <Color x:Key="Color.Warning">#FF9800</Color>
    <Color x:Key="Color.Error">#F44336</Color>
    <Color x:Key="Color.Info">#2196F3</Color>

    <!-- 1.4 Waveform — Dev Plan §3.4 -->
    <Color x:Key="Color.EegChannel1">#00E676</Color>
    <Color x:Key="Color.EegChannel2">#FFD54F</Color>
    <Color x:Key="Color.AeegFill">#6600E676</Color>
    <Color x:Key="Color.NirsTrend">#29B6F6</Color>

    <!-- 1.5 Quality indication — UI_SPEC §7 / Dev Plan §3.5 (50% alpha) -->
    <Color x:Key="Color.Quality.Missing">#809E9E9E</Color>
    <Color x:Key="Color.Quality.Saturated">#80F44336</Color>
    <Color x:Key="Color.Quality.LeadOff">#80FF9800</Color>

    <!-- 1.6 Shadow / Effect -->
    <Color x:Key="Color.Shadow">#000000</Color>

    <!-- 1.6.1 Layout dividers -->
    <Color x:Key="Color.DividerMajor">#7FAECF</Color>
    <Color x:Key="Color.DividerNormal">#5A6B7A</Color>
    <Color x:Key="Color.DividerMinor">#3E4C58</Color>

    <!-- 1.7 Dark-theme UI accents - Apple refined grays -->
    <Color x:Key="Color.BorderDark">#48484A</Color>
    <Color x:Key="Color.HoverDark">#3A3A3C</Color>
    <Color x:Key="Color.BorderSubtle">#2C2C2E</Color>
    <Color x:Key="Color.BackgroundAlt">#1C1C1E</Color>
    <Color x:Key="Color.DeviceInactive">#8E8E93</Color>
    <Color x:Key="Color.PanelHighlight">#66FFFFFF</Color>
    <Color x:Key="Color.PanelShadow">#46000000</Color>

    <!-- 1.7 Text - Apple typography colors -->
    <Color x:Key="Color.TextPrimary">#000000</Color>
    <Color x:Key="Color.TextSecondary">#6C6C70</Color>
    <Color x:Key="Color.TextOnPrimary">#FFFFFF</Color>
    <Color x:Key="Color.TextOnDark">#FFFFFF</Color>
    <Color x:Key="Color.TextOnSurface">#000000</Color>
    <Color x:Key="Color.TextMuted">#8E8E93</Color>

    <!-- 1.8 Dark-background text variants - Apple label colors -->
    <Color x:Key="Color.TextDarkSecondary">#AEAEB2</Color>
    <Color x:Key="Color.TextDarkMuted">#636366</Color>
    <Color x:Key="Color.TextDarkTertiary">#8E8E93</Color>
    <Color x:Key="Color.PlaceholderDark">#48484A</Color>

    <!-- ── 2. SolidColorBrush shortcuts ── -->

    <!-- 2.1 Theme brushes -->
    <SolidColorBrush x:Key="PrimaryBrush"      Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush"  Color="{StaticResource Color.PrimaryLight}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush"   Color="{StaticResource Color.PrimaryDark}"/>

    <!-- 2.2 Background brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource Color.BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundBrush"     Color="{StaticResource Color.Background}"/>
    <SolidColorBrush x:Key="PanelBrush"          Color="{StaticResource Color.Panel}"/>
    <SolidColorBrush x:Key="SurfaceBrush"        Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="SurfaceDarkBrush"    Color="{StaticResource Color.SurfaceDark}"/>
    <SolidColorBrush x:Key="BorderBrush"         Color="{StaticResource Color.Border}"/>

    <!-- 2.3 Functional brushes -->
    <SolidColorBrush x:Key="SuccessBrush"  Color="{StaticResource Color.Success}"/>
    <SolidColorBrush x:Key="WarningBrush"  Color="{StaticResource Color.Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush"    Color="{StaticResource Color.Error}"/>
    <SolidColorBrush x:Key="InfoBrush"     Color="{StaticResource Color.Info}"/>

    <!-- 2.4 Waveform brushes -->
    <SolidColorBrush x:Key="EegChannel1Brush" Color="{StaticResource Color.EegChannel1}"/>
    <SolidColorBrush x:Key="EegChannel2Brush" Color="{StaticResource Color.EegChannel2}"/>
    <SolidColorBrush x:Key="AeegFillBrush"    Color="{StaticResource Color.AeegFill}"/>
    <SolidColorBrush x:Key="NirsTrendBrush"   Color="{StaticResource Color.NirsTrend}"/>

    <!-- 2.5 Quality brushes -->
    <SolidColorBrush x:Key="MissingBrush"   Color="{StaticResource Color.Quality.Missing}"/>
    <SolidColorBrush x:Key="SaturatedBrush" Color="{StaticResource Color.Quality.Saturated}"/>
    <SolidColorBrush x:Key="LeadOffBrush"   Color="{StaticResource Color.Quality.LeadOff}"/>

    <!-- 2.6 Dark-theme UI brushes -->
    <SolidColorBrush x:Key="BorderDarkBrush"  Color="{StaticResource Color.BorderDark}"/>
    <SolidColorBrush x:Key="HoverDarkBrush"   Color="{StaticResource Color.HoverDark}"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource Color.BorderSubtle}"/>
    <SolidColorBrush x:Key="BackgroundAltBrush" Color="{StaticResource Color.BackgroundAlt}"/>
    <SolidColorBrush x:Key="DeviceInactiveBrush" Color="{StaticResource Color.DeviceInactive}"/>
    <SolidColorBrush x:Key="PanelHighlightBrush" Color="{StaticResource Color.PanelHighlight}"/>
    <SolidColorBrush x:Key="PanelShadowBrush" Color="{StaticResource Color.PanelShadow}"/>

    <!-- 2.6.1 Divider brushes -->
    <SolidColorBrush x:Key="DividerMajorBrush" Color="{StaticResource Color.DividerMajor}"/>
    <SolidColorBrush x:Key="DividerNormalBrush" Color="{StaticResource Color.DividerNormal}"/>
    <SolidColorBrush x:Key="DividerMinorBrush" Color="{StaticResource Color.DividerMinor}"/>

    <!-- 2.7 Input/semantic brushes -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TransparentBrush"     Color="Transparent"/>

    <!-- 2.8 Overlay/tint brushes (for hover/pressed states) -->
    <SolidColorBrush x:Key="NavHoverBrush"        Color="{StaticResource Color.TextOnDark}" Opacity="0.1"/>
    <SolidColorBrush x:Key="NavPressedBrush"       Color="{StaticResource Color.TextOnDark}" Opacity="0.2"/>
    <SolidColorBrush x:Key="PrimaryTintLightBrush" Color="{StaticResource Color.Primary}" Opacity="0.1"/>
    <SolidColorBrush x:Key="PrimaryTintBrush"      Color="{StaticResource Color.Primary}" Opacity="0.2"/>
    <SolidColorBrush x:Key="PrimaryTintSubtleBrush" Color="{StaticResource Color.Primary}" Opacity="0.15"/>

    <!-- 2.8 Text brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush"   Color="{StaticResource Color.TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Color.TextSecondary}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource Color.TextOnPrimary}"/>
    <SolidColorBrush x:Key="TextOnDarkBrush"    Color="{StaticResource Color.TextOnDark}"/>
    <SolidColorBrush x:Key="TextOnSurfaceBrush" Color="{StaticResource Color.TextOnSurface}"/>
    <SolidColorBrush x:Key="TextMutedBrush"     Color="{StaticResource Color.TextMuted}"/>

    <!-- 2.9 Dark-background text brushes -->
    <SolidColorBrush x:Key="TextDarkSecondaryBrush" Color="{StaticResource Color.TextDarkSecondary}"/>
    <SolidColorBrush x:Key="TextDarkMutedBrush"     Color="{StaticResource Color.TextDarkMuted}"/>
    <SolidColorBrush x:Key="TextDarkTertiaryBrush"  Color="{StaticResource Color.TextDarkTertiary}"/>
    <SolidColorBrush x:Key="PlaceholderDarkBrush"   Color="{StaticResource Color.PlaceholderDark}"/>

</ResourceDictionary>
