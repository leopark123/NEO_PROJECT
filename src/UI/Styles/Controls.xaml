<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================ -->
    <!-- Sprint 1.3: Base control styles (visual only)                    -->
    <!-- Source: NEO_UI_Development_Plan_WPF.md §5, UI_SPEC.md §13       -->
    <!-- No business triggers, no ViewModel bindings                      -->
    <!-- ================================================================ -->

    <!-- ── DefaultButtonStyle — normal/neutral button ── -->
    <Style x:Key="DefaultButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Foreground"      Value="{DynamicResource TextOnSurfaceBrush}"/>
        <Setter Property="FontFamily"      Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"        Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight"      Value="Normal"/>
        <Setter Property="Padding"         Value="{StaticResource Dim.DefaultButtonPadding}"/>
        <Setter Property="MinHeight"       Value="{StaticResource Dim.TouchMinSize}"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush"     Value="{DynamicResource SurfaceDarkBrush}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource SurfaceDarkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="BorderBrush"
                                    Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── ChannelToggleButtonStyle — NIRS channel on/off switch ── -->
    <!-- Visual-only ToggleButton; no binding to channel data        -->
    <Style x:Key="ChannelToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="MinWidth"        Value="{StaticResource Dim.TouchMinSize}"/>
        <Setter Property="MinHeight"       Value="{StaticResource Dim.TouchMinSize}"/>
        <Setter Property="FontFamily"      Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"        Value="{StaticResource FontSize.Body}"/>
        <Setter Property="Foreground"      Value="{DynamicResource TextOnDarkBrush}"/>
        <Setter Property="Background"      Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Padding"         Value="{StaticResource Dim.ToggleItemPadding}"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{DynamicResource BorderDarkBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource PrimaryBrush}"/>
                            <Setter TargetName="border" Property="BorderBrush"
                                    Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground"
                                    Value="{DynamicResource TextOnPrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush"
                                    Value="{DynamicResource PrimaryLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── ParamComboBoxStyle — parameter dropdown (dark theme) ── -->
    <Style x:Key="ParamComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontFamily"      Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"        Value="{StaticResource FontSize.Body}"/>
        <Setter Property="MinHeight"       Value="{StaticResource Dim.TouchMinSize}"/>
        <Setter Property="Foreground"      Value="{DynamicResource TextOnDarkBrush}"/>
        <Setter Property="Background"      Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Padding"         Value="{StaticResource Dim.InputPadding}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                      Focusable="False"
                                      ClickMode="Press"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="{StaticResource Dim.ComboBoxArrowWidth}"/>
                                        </Grid.ColumnDefinitions>
                                        <Border x:Name="tbBorder"
                                                Grid.ColumnSpan="2"
                                                Background="{DynamicResource BorderBrush}"
                                                BorderBrush="{DynamicResource BorderDarkBrush}"
                                                BorderThickness="1"
                                                CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                                                SnapsToDevicePixels="True"/>
                                        <Path Grid.Column="1"
                                              Data="M 0,0 L 4,4 L 8,0"
                                              Fill="{DynamicResource TextMutedBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              StrokeThickness="0"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="tbBorder" Property="BorderBrush"
                                                    Value="{DynamicResource PrimaryBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="tbBorder" Property="BorderBrush"
                                                    Value="{DynamicResource PrimaryBrush}"/>
                                            <Setter TargetName="tbBorder" Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="tbBorder" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          Margin="{StaticResource Dim.ComboBoxContentMargin}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                        <Popup x:Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                            <Grid SnapsToDevicePixels="True"
                                  MinWidth="{TemplateBinding ActualWidth}"
                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                <Border Background="{DynamicResource BackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderDarkBrush}"
                                        BorderThickness="1"
                                        CornerRadius="{StaticResource Dim.CornerRadiusBottom}">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── ParamComboBoxItemStyle — dark-theme dropdown items ── -->
    <Style x:Key="ParamComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="MinHeight"   Value="{StaticResource Dim.ComboBoxItemHeight}"/>
        <Setter Property="Padding"     Value="{StaticResource Dim.ToggleItemPadding}"/>
        <Setter Property="FontFamily"  Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"    Value="{StaticResource FontSize.Body}"/>
        <Setter Property="Foreground"  Value="{DynamicResource TextOnDarkBrush}"/>
        <Setter Property="Background"  Value="{StaticResource TransparentBrush}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverDarkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource Color.Primary}" Opacity="0.25"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── TitleTextBlockStyle — 24px Bold ── -->
    <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily"  Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"    Value="{StaticResource FontSize.Title}"/>
        <Setter Property="FontWeight"  Value="Bold"/>
        <Setter Property="Foreground"  Value="{DynamicResource TextOnDarkBrush}"/>
    </Style>

    <!-- ── BodyTextBlockStyle — 14px Regular ── -->
    <Style x:Key="BodyTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily"  Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"    Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight"  Value="Normal"/>
        <Setter Property="Foreground"  Value="{DynamicResource TextOnDarkBrush}"/>
    </Style>

    <!-- ── SecondaryTextBlockStyle — 12px muted ── -->
    <Style x:Key="SecondaryTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily"  Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"    Value="{StaticResource FontSize.Small}"/>
        <Setter Property="FontWeight"  Value="Normal"/>
        <Setter Property="Foreground"  Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <!-- ── NeoSeparatorStyle — subtle divider ── -->
    <Style x:Key="NeoSeparatorStyle" TargetType="Separator">
        <Setter Property="Background"  Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Height"      Value="{StaticResource Dim.SeparatorHeight}"/>
        <Setter Property="Margin"      Value="{StaticResource Dim.SeparatorMargin}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- ── Dark-themed separator for panels ── -->
    <Style x:Key="DarkSeparatorStyle" TargetType="Separator">
        <Setter Property="Background"  Value="{DynamicResource BorderDarkBrush}"/>
        <Setter Property="Height"      Value="{StaticResource Dim.SeparatorHeight}"/>
        <Setter Property="Margin"      Value="{StaticResource Dim.SeparatorMargin}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

</ResourceDictionary>

