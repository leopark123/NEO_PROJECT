<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================ -->
    <!-- Sprint 1.3: Button styles                                        -->
    <!-- Source: NEO_UI_Development_Plan_WPF.md §5.1                      -->
    <!-- Touch: UI_SPEC.md §13 — MinHeight 44px                           -->
    <!-- ================================================================ -->

    <!-- ── PrimaryButtonStyle (Apple-style) ── -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background"    Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground"    Value="{DynamicResource TextOnPrimaryBrush}"/>
        <Setter Property="FontFamily"    Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"      Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight"    Value="Semibold"/>
        <Setter Property="Padding"       Value="{StaticResource Dim.ButtonPadding}"/>
        <Setter Property="MinWidth"      Value="{StaticResource Dim.ButtonMinWidth}"/>
        <Setter Property="MinHeight"     Value="{StaticResource Dim.TouchMinSize}"/>
        <Setter Property="Cursor"        Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource PrimaryLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource PrimaryDarkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── SecondaryButtonStyle (Apple-style) ── -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background"    Value="{StaticResource TransparentBrush}"/>
        <Setter Property="Foreground"    Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="FontFamily"    Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"      Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight"    Value="Semibold"/>
        <Setter Property="Padding"       Value="{StaticResource Dim.ButtonPadding}"/>
        <Setter Property="MinWidth"      Value="{StaticResource Dim.ButtonMinWidth}"/>
        <Setter Property="MinHeight"     Value="{StaticResource Dim.TouchMinSize}"/>
        <Setter Property="Cursor"        Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="1.5"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource PrimaryTintLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource PrimaryTintBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── NavButtonStyle — per UI_SPEC §4.1 ── -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Width"         Value="{StaticResource Dim.NavButtonSize}"/>
        <Setter Property="Height"        Value="{StaticResource Dim.NavButtonSize}"/>
        <Setter Property="Background"    Value="{StaticResource TransparentBrush}"/>
        <Setter Property="Foreground"    Value="{DynamicResource TextOnDarkBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"        Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource NavHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource NavPressedBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── ToolbarButtonStyle — per UI_SPEC §13 ── -->
    <Style x:Key="ToolbarButtonStyle" TargetType="Button">
        <Setter Property="Width"         Value="{StaticResource Dim.TouchMinSize}"/>
        <Setter Property="Height"        Value="{StaticResource Dim.TouchMinSize}"/>
        <Setter Property="Background"    Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Foreground"    Value="{DynamicResource TextOnDarkBrush}"/>
        <Setter Property="BorderBrush"   Value="{DynamicResource BorderDarkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor"        Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource HoverDarkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{DynamicResource BorderDarkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>


