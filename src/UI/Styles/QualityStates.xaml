<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================================================ -->
    <!-- Sprint 1.3: Quality state visual styles                          -->
    <!-- Source: UI_SPEC.md §7, NEO_UI_Development_Plan_WPF.md §3.5      -->
    <!-- Visual-only: no judgment logic, for binding use only             -->
    <!-- ================================================================ -->

    <!-- ── MissingDataStyle ──                                           -->
    <!-- UI_SPEC §7: "波形断裂 + 灰色背景"                               -->
    <!-- Color: #9E9E9E @ 50% alpha (Dev Plan §3.5)                      -->
    <Style x:Key="MissingDataStyle" TargetType="Border">
        <Setter Property="Background"          Value="{StaticResource MissingBrush}"/>
        <Setter Property="BorderBrush"         Value="{StaticResource TransparentBrush}"/>
        <Setter Property="BorderThickness"     Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- ── SaturatedSignalStyle ──                                       -->
    <!-- UI_SPEC §7: "红色高亮"                                           -->
    <!-- Color: #F44336 @ 50% alpha (Dev Plan §3.5)                      -->
    <Style x:Key="SaturatedSignalStyle" TargetType="Border">
        <Setter Property="Background"          Value="{StaticResource SaturatedBrush}"/>
        <Setter Property="BorderBrush"         Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="BorderThickness"     Value="1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- ── LeadOffStyle ──                                               -->
    <!-- UI_SPEC §7: "图标 + Lead Off + 橙色背景"                         -->
    <!-- Color: #FF9800 @ 50% alpha (Dev Plan §3.5)                      -->
    <Style x:Key="LeadOffStyle" TargetType="Border">
        <Setter Property="Background"          Value="{StaticResource LeadOffBrush}"/>
        <Setter Property="BorderBrush"         Value="{DynamicResource WarningBrush}"/>
        <Setter Property="BorderThickness"     Value="1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- ── LeadOff label style (for "Lead Off" text overlay) ── -->
    <Style x:Key="LeadOffLabelStyle" TargetType="TextBlock">
        <Setter Property="Text"            Value="Lead Off"/>
        <Setter Property="FontFamily"      Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"        Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight"      Value="Bold"/>
        <Setter Property="Foreground"      Value="{DynamicResource WarningBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment"   Value="Center"/>
    </Style>

    <!-- ── Missing data label style ── -->
    <Style x:Key="MissingDataLabelStyle" TargetType="TextBlock">
        <Setter Property="Text"            Value="No Data"/>
        <Setter Property="FontFamily"      Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"        Value="{StaticResource FontSize.Small}"/>
        <Setter Property="Foreground"      Value="{DynamicResource TextMutedBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment"   Value="Center"/>
    </Style>

    <!-- ── Saturated signal label style ── -->
    <Style x:Key="SaturatedLabelStyle" TargetType="TextBlock">
        <Setter Property="Text"            Value="Saturated"/>
        <Setter Property="FontFamily"      Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"        Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight"      Value="Bold"/>
        <Setter Property="Foreground"      Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment"   Value="Center"/>
    </Style>

</ResourceDictionary>

