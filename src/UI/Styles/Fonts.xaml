<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ================================================================ -->
    <!-- Sprint 1.3: Font definitions                                     -->
    <!-- Source: NEO_UI_Development_Plan_WPF.md §4 (frozen)               -->
    <!-- ================================================================ -->

    <!-- ── Font families ── -->
    <FontFamily x:Key="Font.UI">Microsoft YaHei UI</FontFamily>
    <FontFamily x:Key="Font.Mono">Consolas</FontFamily>

    <!-- ── Font sizes (Dev Plan §4) ── -->
    <sys:Double x:Key="FontSize.Title">24</sys:Double>
    <sys:Double x:Key="FontSize.Subtitle">18</sys:Double>
    <sys:Double x:Key="FontSize.Body">14</sys:Double>
    <sys:Double x:Key="FontSize.ParamValue">13</sys:Double>
    <sys:Double x:Key="FontSize.Small">12</sys:Double>
    <sys:Double x:Key="FontSize.StatusBar">11</sys:Double>
    <sys:Double x:Key="FontSize.Caption">10</sys:Double>
    <sys:Double x:Key="FontSize.NavLabel">9</sys:Double>
    <sys:Double x:Key="FontSize.MonoValue">16</sys:Double>
    <sys:Double x:Key="FontSize.MonoLabel">12</sys:Double>

    <!-- ── Preset TextBlock styles ── -->

    <!-- 标题 24px Bold -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.Title}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- 副标题 18px Medium -->
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.Subtitle}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- 正文 14px Regular -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- 小字 12px Regular -->
    <Style x:Key="SmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.Small}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <!-- 数值 Consolas 16px -->
    <Style x:Key="MonoValueTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Mono}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.MonoValue}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- 波形标签 Consolas 12px -->
    <Style x:Key="MonoLabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Mono}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.MonoLabel}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

</ResourceDictionary>
