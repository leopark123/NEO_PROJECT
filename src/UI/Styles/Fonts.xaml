<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ================================================================ -->
    <!-- Sprint 1.3: Font definitions                                     -->
    <!-- Source: NEO_UI_Development_Plan_WPF.md §4 (frozen)               -->
    <!-- ================================================================ -->

    <!-- ── Font families (Apple-style: Segoe UI similar to SF Pro) ── -->
    <FontFamily x:Key="Font.UI">Segoe UI</FontFamily>
    <FontFamily x:Key="Font.Mono">Consolas</FontFamily>

    <!-- ── Font sizes (Apple-style scale) ── -->
    <sys:Double x:Key="FontSize.Title">28</sys:Double>
    <sys:Double x:Key="FontSize.Subtitle">20</sys:Double>
    <sys:Double x:Key="FontSize.Body">15</sys:Double>
    <sys:Double x:Key="FontSize.ParamValue">14</sys:Double>
    <sys:Double x:Key="FontSize.Small">13</sys:Double>
    <sys:Double x:Key="FontSize.StatusBar">12</sys:Double>
    <sys:Double x:Key="FontSize.Caption">11</sys:Double>
    <sys:Double x:Key="FontSize.NavLabel">10</sys:Double>
    <sys:Double x:Key="FontSize.MonoValue">17</sys:Double>
    <sys:Double x:Key="FontSize.MonoLabel">13</sys:Double>

    <!-- ── Preset TextBlock styles ── -->

    <!-- 标题 28px Semibold (Apple-style) -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.Title}"/>
        <Setter Property="FontWeight" Value="Semibold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- 副标题 20px Semibold (Apple-style) -->
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.Subtitle}"/>
        <Setter Property="FontWeight" Value="Semibold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- 正文 14px Regular -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.Body}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- 小字 12px Regular -->
    <Style x:Key="SmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.UI}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.Small}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <!-- 数值 Consolas 16px -->
    <Style x:Key="MonoValueTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Mono}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.MonoValue}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- 波形标签 Consolas 12px -->
    <Style x:Key="MonoLabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Mono}"/>
        <Setter Property="FontSize"   Value="{StaticResource FontSize.MonoLabel}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

</ResourceDictionary>

