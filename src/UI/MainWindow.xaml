<Window x:Class="Neo.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Neo.UI.Views.Controls"
        Title="NEO aEEG + NIRS Monitor"
        Width="1280"
        Height="720"
        MinWidth="1024"
        MinHeight="600"
        WindowState="Maximized"
        Background="{DynamicResource BackgroundDarkBrush}">
    <Window.Resources>
        <DropShadowEffect x:Key="PanelShadowStrong"
                          Color="{StaticResource Color.Shadow}"
                          BlurRadius="12"
                          ShadowDepth="3"
                          Opacity="0.36"/>
        <DropShadowEffect x:Key="PanelShadowSoft"
                          Color="{StaticResource Color.Shadow}"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Opacity="0.24"/>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <controls:ToolbarPanel DockPanel.Dock="Top"
                               DataContext="{Binding Toolbar}"/>

        <controls:StatusBarPanel DockPanel.Dock="Bottom"
                                 DataContext="{Binding Status}"/>

        <Border x:Name="RightVideoNirsPanel"
                DockPanel.Dock="Right"
                Margin="8,0,0,0"
                Width="{StaticResource Dim.RightPanelWidth}"
                MinWidth="{StaticResource Dim.RightPanelWidth}"
                Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource DividerMajorBrush}"
                BorderThickness="{StaticResource Dim.BorderThicknessMajor}"
                CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                Effect="{StaticResource PanelShadowStrong}">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource DividerMajorBrush}"
                        BorderThickness="{StaticResource Dim.BorderThicknessNormal}"
                        CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                        Effect="{StaticResource PanelShadowSoft}">
                    <controls:VideoPanel DataContext="{Binding Video}"/>
                </Border>

                <Grid Grid.Row="1"
                      Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="56*"/>
                        <ColumnDefinition Width="44*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Margin="0,0,4,0"
                            Background="{DynamicResource BackgroundBrush}"
                            BorderBrush="{DynamicResource DividerNormalBrush}"
                            BorderThickness="{StaticResource Dim.BorderThicknessNormal}"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                            Effect="{StaticResource PanelShadowSoft}">
                        <controls:NirsChannelStatusPanel DataContext="{Binding Nirs}"/>
                    </Border>

                    <Border Grid.Column="1"
                            Margin="4,0,0,0"
                            Background="{DynamicResource BackgroundBrush}"
                            BorderBrush="{DynamicResource DividerNormalBrush}"
                            BorderThickness="{StaticResource Dim.BorderThicknessNormal}"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                            Effect="{StaticResource PanelShadowSoft}">
                        <controls:NirsSourcePanel DataContext="{Binding Nirs}"/>
                    </Border>

                    <Rectangle Grid.ColumnSpan="2"
                               Width="1"
                               Fill="{DynamicResource DividerMinorBrush}"
                               HorizontalAlignment="Center"
                               IsHitTestVisible="False"/>

                </Grid>

                <Rectangle Grid.Row="1"
                           Height="{StaticResource Dim.SeparatorMajorHeight}"
                           Fill="{DynamicResource DividerMajorBrush}"
                           VerticalAlignment="Top"
                           IsHitTestVisible="False"/>
            </Grid>
        </Border>

        <controls:NavPanel DockPanel.Dock="Left">
            <controls:NavPanel.Style>
                <Style TargetType="{x:Type controls:NavPanel}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Toolbar.IsNavDrawerOpen}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </controls:NavPanel.Style>
        </controls:NavPanel>

        <Grid Background="{DynamicResource BackgroundDarkBrush}">
            <ContentControl Content="{Binding CurrentPage}"
                            Panel.ZIndex="0"/>

            <controls:WaveformPanel x:Name="WaveformRenderPanel"
                                    Panel.ZIndex="1">
                <controls:WaveformPanel.Style>
                    <Style TargetType="UserControl">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveRoute}" Value="Home">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </controls:WaveformPanel.Style>
            </controls:WaveformPanel>
        </Grid>
    </DockPanel>
</Window>
