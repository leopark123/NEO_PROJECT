<Window x:Class="Neo.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Neo.UI.Views.Controls"
        Title="NEO aEEG + NIRS Monitor"
        Width="1280"
        Height="720"
        MinWidth="1024"
        MinHeight="600"
        WindowState="Maximized"
        Background="{StaticResource BackgroundDarkBrush}">

    <DockPanel LastChildFill="True">
        <controls:ToolbarPanel DockPanel.Dock="Top"
                               DataContext="{Binding Toolbar}"/>

        <controls:StatusBarPanel DockPanel.Dock="Bottom"
                                 DataContext="{Binding Status}"/>

        <Border x:Name="RightVideoNirsPanel"
                DockPanel.Dock="Right"
                Width="{StaticResource Dim.RightPanelWidth}"
                MinWidth="{StaticResource Dim.RightPanelWidth}"
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="{StaticResource Dim.ParamBorderThickness}">
            <Grid>
                <controls:VideoPanel DataContext="{Binding Video}"/>

                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60*"/>
                        <RowDefinition Height="40*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,4,0"
                            Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="{StaticResource Dim.BorderThicknessThin}"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}">
                        <controls:NirsSourcePanel DataContext="{Binding Nirs}"/>
                    </Border>

                    <Border Grid.Row="1"
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="{StaticResource Dim.BorderThicknessThin}"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}">
                        <controls:NirsChannelStatusPanel DataContext="{Binding Nirs}"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <controls:NavPanel DockPanel.Dock="Left">
            <controls:NavPanel.Style>
                <Style TargetType="{x:Type controls:NavPanel}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Toolbar.IsNavDrawerOpen}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </controls:NavPanel.Style>
        </controls:NavPanel>

        <Grid Background="{StaticResource BackgroundDarkBrush}">
            <ContentControl Content="{Binding CurrentPage}"
                            Panel.ZIndex="0"/>

            <controls:WaveformPanel x:Name="WaveformRenderPanel"
                                    Panel.ZIndex="1">
                <controls:WaveformPanel.Style>
                    <Style TargetType="UserControl">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveRoute}" Value="Home">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </controls:WaveformPanel.Style>
            </controls:WaveformPanel>
        </Grid>
    </DockPanel>
</Window>
