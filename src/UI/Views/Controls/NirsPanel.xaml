<UserControl x:Class="Neo.UI.Views.Controls.NirsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style x:Key="NirsCompactComboStyle" TargetType="ComboBox" BasedOn="{StaticResource ParamComboBoxStyle}">
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </UserControl.Resources>

    <Border Margin="0"
            Background="{DynamicResource BackgroundDarkBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="{StaticResource Dim.BorderThicknessThin}"
            CornerRadius="{StaticResource Dim.CornerRadiusAll}">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="NIRS Channels"
                               Foreground="{DynamicResource NirsTrendBrush}"
                               FontSize="{StaticResource FontSize.Caption}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="rSO2: XX% / --% / Fault / Blocked"
                               Foreground="{DynamicResource TextDarkTertiaryBrush}"
                               FontSize="{StaticResource FontSize.Caption}"/>
                </StackPanel>

                <Grid Grid.Row="1"
                      Margin="0,6,0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextDarkSecondaryBrush}"
                               FontSize="{StaticResource FontSize.Caption}"
                               Text="Mode"/>
                    <ComboBox Grid.Row="0"
                              Grid.Column="1"
                              Style="{StaticResource NirsCompactComboStyle}"
                              ItemContainerStyle="{StaticResource ParamComboBoxItemStyle}"
                              ItemsSource="{Binding SourceModeOptions}"
                              SelectedItem="{Binding SelectedSourceMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Grid.Row="0"
                            Grid.Column="2"
                            Margin="6,0,0,0"
                            Padding="8,4"
                            MinWidth="62"
                            Content="Apply"
                            Command="{Binding ApplySourceSwitchCommand}"
                            Style="{StaticResource DefaultButtonStyle}"/>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="0,6,6,0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextDarkSecondaryBrush}"
                               FontSize="{StaticResource FontSize.Caption}"
                               Text="Port"/>
                    <ComboBox Grid.Row="1"
                              Grid.Column="1"
                              Margin="0,6,0,0"
                              Style="{StaticResource NirsCompactComboStyle}"
                              ItemContainerStyle="{StaticResource ParamComboBoxItemStyle}"
                              ItemsSource="{Binding SerialPortOptions}"
                              SelectedItem="{Binding SelectedSerialPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              IsEnabled="{Binding IsSerialPortEditable}"/>
                    <Button Grid.Row="1"
                            Grid.Column="2"
                            Margin="6,6,0,0"
                            Padding="8,4"
                            MinWidth="62"
                            Content="Refresh"
                            Command="{Binding RefreshSerialPortsCommand}"
                            IsEnabled="{Binding IsSerialPortEditable}"
                            Style="{StaticResource DefaultButtonStyle}"/>

                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Margin="0,4,0,0"
                               Foreground="{DynamicResource TextDarkTertiaryBrush}"
                               FontSize="{StaticResource FontSize.Caption}"
                               Text="Real mode: select detected COM port"/>
                </Grid>

                <ItemsControl Grid.Row="2"
                              ItemsSource="{Binding Channels}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,1,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                          VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="{Binding ChannelLabel}"
                                           Foreground="{DynamicResource TextOnDarkBrush}"
                                           FontSize="{StaticResource FontSize.Caption}"
                                           Margin="6,0,6,0"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding StatusText}"
                                           Foreground="{DynamicResource TextDarkSecondaryBrush}"
                                           FontFamily="{StaticResource Font.Mono}"
                                           FontSize="{StaticResource FontSize.Caption}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Grid.Row="3"
                           Margin="0,4,0,0"
                           Text="{Binding PanelStatus}"
                           Foreground="{DynamicResource TextDarkTertiaryBrush}"
                           FontSize="{StaticResource FontSize.Caption}"/>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>

