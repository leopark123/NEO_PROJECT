<UserControl x:Class="Neo.UI.Views.Controls.NirsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Margin="{StaticResource Dim.ParamPanelMargin}"
            Background="{StaticResource BackgroundDarkBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="{StaticResource Dim.BorderThicknessThin}"
            CornerRadius="{StaticResource Dim.CornerRadiusAll}">
        <Grid Margin="{StaticResource Dim.PanelPaddingThickness}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="NIRS Channels"
                           Foreground="{StaticResource NirsTrendBrush}"
                           FontSize="{StaticResource FontSize.ParamValue}"
                           FontWeight="SemiBold"/>
                <TextBlock Text="rSO2: XX% / --% / Fault / Blocked"
                           Foreground="{StaticResource TextDarkTertiaryBrush}"
                           FontSize="{StaticResource FontSize.Caption}"/>
            </StackPanel>

            <ItemsControl Grid.Row="1"
                          ItemsSource="{Binding Channels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="{StaticResource Dim.ParamValueMargin}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                      VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding ChannelLabel}"
                                       Foreground="{StaticResource TextOnDarkBrush}"
                                       FontSize="{StaticResource FontSize.StatusBar}"
                                       Margin="{StaticResource Dim.ButtonSpacingMargin}"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="2"
                                       Text="{Binding StatusText}"
                                       Foreground="{StaticResource TextDarkSecondaryBrush}"
                                       FontFamily="{StaticResource Font.Mono}"
                                       FontSize="{StaticResource FontSize.StatusBar}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Grid.Row="2"
                       Text="{Binding PanelStatus}"
                       Foreground="{StaticResource TextDarkTertiaryBrush}"
                       FontSize="{StaticResource FontSize.Caption}"/>
        </Grid>
    </Border>
</UserControl>
