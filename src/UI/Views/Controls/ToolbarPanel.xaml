<UserControl x:Class="Neo.UI.Views.Controls.ToolbarPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Sprint 2.1: Extracted from MainWindow.xaml lines 19-158 -->
    <!-- TOP TOOLBAR (60px) â€” UI_SPEC Â§4.1 row 1 -->
    <!-- All sizes/margins/padding from Dimensions.xaml â€” zero hardcoded values -->

    <Border Height="{StaticResource Dim.ToolbarHeight}"
            Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="{StaticResource Dim.ToolbarBorderThickness}">
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Logo -->
                <ColumnDefinition Width="Auto"/>
                <!-- Progress / SeekBar placeholder -->
                <ColumnDefinition Width="*"/>
                <!-- Play/Pause -->
                <ColumnDefinition Width="Auto"/>
                <!-- Screenshot -->
                <ColumnDefinition Width="Auto"/>
                <!-- Annotation -->
                <ColumnDefinition Width="Auto"/>
                <!-- Time display -->
                <ColumnDefinition Width="Auto"/>
                <!-- User -->
                <ColumnDefinition Width="Auto"/>
                <!-- Bed number -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo placeholder -->
            <Border Grid.Column="0" Margin="{StaticResource Dim.LogoAreaMargin}" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Border Width="{StaticResource Dim.LogoSize}" Height="{StaticResource Dim.LogoSize}"
                            CornerRadius="{StaticResource Dim.CornerRadiusAll}"
                            Background="{StaticResource PrimaryBrush}"
                            Margin="{StaticResource Dim.LogoBoxMargin}">
                        <TextBlock Text="N"
                                   Foreground="{StaticResource TextOnDarkBrush}"
                                   FontSize="{StaticResource FontSize.Subtitle}"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="NEO Monitor"
                               Foreground="{StaticResource TextOnDarkBrush}"
                               FontSize="{StaticResource FontSize.MonoValue}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- SeekBar / Progress placeholder -->
            <Border Grid.Column="1"
                    Margin="{StaticResource Dim.SeekBarMargin}"
                    Background="{StaticResource BorderBrush}"
                    CornerRadius="{StaticResource Dim.CornerRadiusSmallAll}"
                    VerticalAlignment="Center">
                <TextBlock Text="SeekBar Placeholder"
                           Foreground="{StaticResource TextDarkMutedBrush}"
                           FontSize="{StaticResource FontSize.StatusBar}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Padding="{StaticResource Dim.SeekBarTextPadding}"/>
            </Border>

            <!-- Play/Pause button â€” toggles icon based on IsPlaying -->
            <Button Grid.Column="2"
                    Width="{StaticResource Dim.TouchMinSize}" Height="{StaticResource Dim.TouchMinSize}"
                    Margin="{StaticResource Dim.ButtonSpacingMargin}"
                    Foreground="{StaticResource TextOnDarkBrush}"
                    BorderBrush="{StaticResource BorderDarkBrush}"
                    BorderThickness="{StaticResource Dim.ToolbarButtonBorderThickness}"
                    FontSize="{StaticResource FontSize.MonoValue}"
                    ToolTip="æ’­æ”¾/æš‚åœ"
                    Command="{Binding PlaybackCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="Content" Value="â–¶"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                <Setter Property="Content" Value="â¸"/>
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Screenshot button -->
            <Button Grid.Column="3"
                    Width="{StaticResource Dim.TouchMinSize}" Height="{StaticResource Dim.TouchMinSize}"
                    Margin="{StaticResource Dim.ButtonSpacingMargin}"
                    Background="{StaticResource BorderBrush}"
                    Foreground="{StaticResource TextOnDarkBrush}"
                    BorderBrush="{StaticResource BorderDarkBrush}"
                    BorderThickness="{StaticResource Dim.ToolbarButtonBorderThickness}"
                    FontSize="{StaticResource FontSize.Body}"
                    Content="ðŸ“·"
                    ToolTip="æˆªå›¾"
                    Command="{Binding ScreenshotCommand}"/>

            <!-- Annotation button -->
            <Button Grid.Column="4"
                    Width="{StaticResource Dim.TouchMinSize}" Height="{StaticResource Dim.TouchMinSize}"
                    Margin="{StaticResource Dim.ButtonSpacingMargin}"
                    Background="{StaticResource BorderBrush}"
                    Foreground="{StaticResource TextOnDarkBrush}"
                    BorderBrush="{StaticResource BorderDarkBrush}"
                    BorderThickness="{StaticResource Dim.ToolbarButtonBorderThickness}"
                    FontSize="{StaticResource FontSize.Body}"
                    Content="ðŸ“"
                    ToolTip="æ ‡æ³¨"
                    Command="{Binding AnnotationCommand}"/>

            <!-- Time display -->
            <TextBlock Grid.Column="5"
                       Text="{Binding CurrentTime}"
                       Foreground="{StaticResource TextDarkSecondaryBrush}"
                       FontSize="{StaticResource FontSize.Body}"
                       FontFamily="{StaticResource Font.Mono}"
                       VerticalAlignment="Center"
                       Margin="{StaticResource Dim.TimeDisplayMargin}"/>

            <!-- User placeholder -->
            <TextBlock Grid.Column="6"
                       Text="{Binding CurrentUser}"
                       Foreground="{StaticResource TextDarkSecondaryBrush}"
                       FontSize="{StaticResource FontSize.Small}"
                       VerticalAlignment="Center"
                       Margin="{StaticResource Dim.ToolbarUserMargin}"/>

            <!-- Bed number placeholder -->
            <Border Grid.Column="7"
                    Margin="{StaticResource Dim.BedBorderMargin}"
                    Padding="{StaticResource Dim.BedBorderPadding}"
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="{StaticResource Dim.CornerRadiusSmallAll}"
                    VerticalAlignment="Center">
                <TextBlock Text="{Binding BedNumber}"
                           Foreground="{StaticResource TextOnDarkBrush}"
                           FontSize="{StaticResource FontSize.Small}"
                           FontWeight="SemiBold"/>
            </Border>
        </Grid>
    </Border>

</UserControl>
