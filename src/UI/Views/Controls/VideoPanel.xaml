<UserControl x:Class="Neo.UI.Views.Controls.VideoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Margin="0"
            Background="{DynamicResource BackgroundDarkBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="{StaticResource Dim.BorderThicknessThin}"
            CornerRadius="{StaticResource Dim.CornerRadiusAll}">
        <Grid>
            <Image Source="{Binding FrameImage}"
                   Stretch="Uniform"
                   SnapsToDevicePixels="True"/>

            <Border Background="{DynamicResource BackgroundDarkBrush}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasDevice}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding StatusText}"
                           Foreground="{DynamicResource TextDarkSecondaryBrush}"
                           FontSize="{StaticResource FontSize.Body}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border VerticalAlignment="Bottom"
                    Background="{DynamicResource BackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="{StaticResource Dim.BorderThicknessThin}">
                <TextBlock Text="{Binding StatusText}"
                           Foreground="{DynamicResource TextDarkSecondaryBrush}"
                           FontSize="{StaticResource FontSize.Caption}"
                           Margin="{StaticResource Dim.ToggleItemPadding}"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
