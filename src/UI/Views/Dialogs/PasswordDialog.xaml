<Window x:Class="Neo.UI.Views.Dialogs.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password"
        Width="{StaticResource Dim.DialogSmallWidth}"
        Height="{StaticResource Dim.DialogSmallHeight}"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="{StaticResource Dim.PanelPaddingThickness}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Enter Password"
                   Style="{StaticResource TitleTextBlockStyle}"/>

        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="1"
                     Style="{StaticResource NeoPasswordBoxStyle}"
                     Margin="{StaticResource Dim.ParamSectionMargin}"/>

        <TextBlock x:Name="ErrorText"
                   Grid.Row="2"
                   Foreground="{DynamicResource ErrorBrush}"
                   FontSize="{StaticResource FontSize.Caption}"
                   Visibility="Collapsed"/>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="{StaticResource Dim.ParamSectionMargin}">
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="{StaticResource Dim.ButtonSpacingMargin}"
                    Click="OnCancelClick"/>
            <Button Content="Confirm"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="{StaticResource Dim.ButtonSpacingMargin}"
                    Click="OnOkClick"/>
        </StackPanel>
    </Grid>
</Window>

