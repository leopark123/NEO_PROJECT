<Window x:Class="Neo.UI.Views.Dialogs.UserManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management"
        Width="{StaticResource Dim.DialogMediumWidth}"
        Height="{StaticResource Dim.DialogMediumHeight}"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="{StaticResource Dim.PanelPaddingThickness}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="User Management"
                   Style="{StaticResource TitleTextBlockStyle}"/>

        <Grid Grid.Row="1"
              Margin="{StaticResource Dim.ParamSectionMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <PasswordBox x:Name="AdminPasswordBox"
                         Grid.Column="0"
                         Style="{StaticResource NeoPasswordBoxStyle}"/>
            <Button Grid.Column="1"
                    Content="Verify"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="{StaticResource Dim.ButtonSpacingMargin}"
                    Click="OnVerifyClick"/>
        </Grid>

        <ListBox x:Name="UserList"
                 Grid.Row="2"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextOnSurfaceBrush}">
            <ListBoxItem Content="operator01"/>
            <ListBoxItem Content="operator02"/>
            <ListBoxItem Content="reviewer01"/>
        </ListBox>

        <StackPanel Grid.Row="3">
            <TextBlock x:Name="ErrorText"
                       Foreground="{DynamicResource ErrorBrush}"
                       FontSize="{StaticResource FontSize.Caption}"
                       Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="{StaticResource Dim.ParamSectionMargin}">
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="{StaticResource Dim.ButtonSpacingMargin}"
                        Click="OnCancelClick"/>
                <Button Content="Confirm"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="{StaticResource Dim.ButtonSpacingMargin}"
                        Click="OnOkClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

