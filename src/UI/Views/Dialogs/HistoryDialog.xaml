<Window x:Class="Neo.UI.Views.Dialogs.HistoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="History"
        Width="{StaticResource Dim.DialogLargeWidth}"
        Height="{StaticResource Dim.DialogLargeHeight}"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="{StaticResource Dim.PanelPaddingThickness}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="History Query"
                   Style="{StaticResource TitleTextBlockStyle}"/>

        <Grid Grid.Row="1"
              Margin="{StaticResource Dim.ParamSectionMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="NameTextBox"
                     Grid.Column="0"
                     Style="{StaticResource NeoTextBoxStyle}"
                     Margin="{StaticResource Dim.ButtonSpacingMargin}"
                     ToolTip="Patient name"/>
            <TextBox x:Name="AdmissionTextBox"
                     Grid.Column="1"
                     Style="{StaticResource NeoTextBoxStyle}"
                     Margin="{StaticResource Dim.ButtonSpacingMargin}"
                     ToolTip="Admission ID"/>
            <Button Grid.Column="2"
                    Content="Query"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="{StaticResource Dim.ButtonSpacingMargin}"
                    Click="OnQueryClick"/>
        </Grid>

        <ListBox x:Name="ResultList"
                 Grid.Row="2"
                 Background="{DynamicResource SurfaceBrush}"
                 Foreground="{DynamicResource TextOnSurfaceBrush}"/>

        <StackPanel Grid.Row="3">
            <TextBlock x:Name="ErrorText"
                       Foreground="{DynamicResource ErrorBrush}"
                       FontSize="{StaticResource FontSize.Caption}"
                       Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="{StaticResource Dim.ParamSectionMargin}">
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="{StaticResource Dim.ButtonSpacingMargin}"
                        Click="OnCancelClick"/>
                <Button Content="Load"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="{StaticResource Dim.ButtonSpacingMargin}"
                        Click="OnOkClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

