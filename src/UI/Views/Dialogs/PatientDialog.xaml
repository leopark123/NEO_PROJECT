<Window x:Class="Neo.UI.Views.Dialogs.PatientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient"
        Width="{StaticResource Dim.DialogLargeWidth}"
        Height="{StaticResource Dim.DialogLargeHeight}"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="{StaticResource Dim.PanelPaddingThickness}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Patient Information"
                   Style="{StaticResource TitleTextBlockStyle}"/>

        <Grid Grid.Row="1"
              Margin="{StaticResource Dim.ParamSectionMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Patient Name"
                       Style="{StaticResource BodyTextBlockStyle}"/>
            <TextBox x:Name="PatientNameTextBox"
                     Grid.Row="1"
                     Grid.Column="0"
                     Style="{StaticResource NeoTextBoxStyle}"
                     Margin="{StaticResource Dim.FormItemMargin}"/>

            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Text="Admission ID"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Margin="{StaticResource Dim.ButtonSpacingMargin}"/>
            <TextBox x:Name="AdmissionIdTextBox"
                     Grid.Row="1"
                     Grid.Column="1"
                     Style="{StaticResource NeoTextBoxStyle}"
                     Margin="{StaticResource Dim.ButtonSpacingMargin}"/>

            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="Gender"
                       Style="{StaticResource BodyTextBlockStyle}"/>
            <ComboBox x:Name="GenderCombo"
                      Grid.Row="3"
                      Grid.Column="0"
                      Style="{StaticResource NeoComboBoxStyle}"
                      ItemContainerStyle="{StaticResource NeoComboBoxItemStyle}">
                <ComboBoxItem Content="Unknown" IsSelected="True"/>
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
            </ComboBox>

            <TextBlock Grid.Row="2"
                       Grid.Column="1"
                       Text="Bed Number"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Margin="{StaticResource Dim.ButtonSpacingMargin}"/>
            <TextBox x:Name="BedTextBox"
                     Grid.Row="3"
                     Grid.Column="1"
                     Style="{StaticResource NeoTextBoxStyle}"
                     Margin="{StaticResource Dim.ButtonSpacingMargin}"/>
        </Grid>

        <StackPanel Grid.Row="2">
            <TextBlock x:Name="ErrorText"
                       Foreground="{StaticResource ErrorBrush}"
                       FontSize="{StaticResource FontSize.Caption}"
                       Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="{StaticResource Dim.ParamSectionMargin}">
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="{StaticResource Dim.ButtonSpacingMargin}"
                        Click="OnCancelClick"/>
                <Button Content="Save"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="{StaticResource Dim.ButtonSpacingMargin}"
                        Click="OnOkClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
